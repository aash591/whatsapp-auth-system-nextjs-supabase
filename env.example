# WhatsApp Authentication System - Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Database URL
# Get this from your Supabase project settings > Database > Connection string
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (Public)
# Get this from your Supabase project settings > API > Project API keys
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (Private - Server-side only)
# Get this from your Supabase project settings > API > Project API keys
# WARNING: Keep this secret! Never expose in client-side code
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT Secret Key (REQUIRED)
# Generate a strong secret key (minimum 64 characters)
# You can use: npm run generate-jwt-secret
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-minimum-64-characters-long

# JWT Token Expiration (Optional - defaults shown)
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# WHATSAPP BUSINESS API CONFIGURATION
# =============================================================================

# WhatsApp Business API App Secret
# Get this from Meta for Developers > Your App > App Settings > Basic
WHATSAPP_APP_SECRET=your-whatsapp-app-secret

# WhatsApp Verify Token (for webhook verification)
# Create a random string for webhook verification
WHATSAPP_VERIFY_TOKEN=your-random-verify-token

# WhatsApp Access Token (for sending messages)
# Get this from Meta for Developers > Your App > WhatsApp > API Setup
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token

# WhatsApp Phone Number ID
# Get this from Meta for Developers > Your App > WhatsApp > API Setup
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CSRF Secret (Optional - for additional CSRF protection)
# Generate a random string
CSRF_SECRET=your-random-csrf-secret

# Rate Limiting Configuration (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development

# Application URL (for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# OPTIONAL: REDIS CONFIGURATION (for production)
# =============================================================================

# Redis URL (for production rate limiting and CSRF storage)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# =============================================================================
# OPTIONAL: MONITORING AND LOGGING
# =============================================================================

# Sentry DSN (for error tracking)
# SENTRY_DSN=your-sentry-dsn

# Log Level
LOG_LEVEL=info
